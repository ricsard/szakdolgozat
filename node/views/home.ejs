<!DOCTYPE html>
<html>
<% include header.html %>
<body ng-app="szakdolgozat" ng-controller="HomeCtrl">
    <% include topToolbar.ejs %>
    <div layout="column" ng-cloak style="height: 100%; overflow-y: scroll;">
        <section layout="row" flex>
            <% include leftSidebar.ejs %>
            <md-content flex layout-padding>
                <div layout="column" layout-fill layout-align="top center">
                    <md-button ng-click="uploadAudio()">Upload an audio file</md-button>
                    <md-list>
                        <md-list-item class="md-3-line" ng-repeat="sound in sounds">
