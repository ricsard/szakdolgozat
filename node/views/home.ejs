                                equalizer
                            </md-button>
                            <div class="md-list-item-text" layout="column">
                                <h3>{{ sound.name }}</h3>
                            </div>
                            <!--<audio controls>-->
                            <!--<source ng-src="sound/file/{{sound._id}}" type="audio/mp3">-->
                            <!--Your browser does not support the audio element.-->
                            <!--</audio>-->
                        </md-list-item>
                    </md-list>
                </div>
                <div flex></div>
            </md-content>

        </section>
    </div>
</body>
</html>
