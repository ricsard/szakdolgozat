<!DOCTYPE html>
<html>
  <% include header.html %>
  <body ng-app="szakdolgozat" ng-controller="LoginCtrl">
    <md-content class="md-padding">
      <md-card>
        <md-toolbar>
          <div class="md-toolbar-tools">
            <h2>
              <span>Login</span>
            </h2>
          </div>
        </md-toolbar>
        <md-card-content>
          <form name="registerForm" ng-submit="sendLogin()">
            <md-input-container>
              <label>Username</label>
              <input type="text" name="username" ng-model="loginObj.username" required>
            </md-input-container>
            <md-input-container>
              <label>Password</label>
              <input type="password" name="password" ng-model="loginObj.password" required>
            </md-input-container>
            <input class="md-button" type="submit" value="Login" />
            <input class="md-button" ng-click="goToRegister()" value="Register" />

          </form>
        </md-card-content>
      </md-card>
    </md-content>

